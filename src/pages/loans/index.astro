---
import AppLayout from '../../layouts/AppLayout.astro';
---

<AppLayout title="Empr√©stimos - Arquivo Inteligente" currentPath="/loans">
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-title">üìÅ Controle de Empr√©stimos</h1>
            <p class="page-subtitle">Gerencie empr√©stimos e devolu√ß√µes de pastas</p>
        </div>
        <button type="button" class="btn-primary" id="btn-new-loan">
            + Novo Empr√©stimo
        </button>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <span class="stat-icon">üìä</span>
            <div class="stat-content">
                <span class="stat-value" id="stat-total">-</span>
                <span class="stat-label">Total</span>
            </div>
        </div>
        <div class="stat-card warning">
            <span class="stat-icon">‚è≥</span>
            <div class="stat-content">
