<style>
    .page-header {
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
        background: linear-gradient(135deg, #10b981, #059669);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 0.25rem 0 0;
        font-size: 0.9375rem;
    }

    .tabs {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .tab {
        padding: 0.625rem 1.25rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 8px;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .tab:hover {
        background: rgba(255, 255, 255, 0.06);
    }

    .tab.active {
        background: rgba(16, 185, 129, 0.15);
        border-color: rgba(16, 185, 129, 0.3);
        color: #34d399;
    }

    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    .generator-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    @media (max-width: 900px) {
        .generator-grid {
            grid-template-columns: 1fr;
        }
    }

    .form-section,
    .preview-section {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        padding: 1.5rem;
    }

    .form-section h2,
    .preview-section h2 {
        margin: 0 0 1.25rem;
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.375rem;
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .form-group input,
    .form-group select {
        width: 100%;
        padding: 0.625rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: white;
        font-size: 0.9375rem;
    }

    .form-group input:focus,
    .form-group select:focus {
        outline: none;
        border-color: #10b981;
    }

    .form-group select option {
        background: #1e293b;
    }

    .employee-list {
        margin-top: 0.5rem;
        min-height: 120px;
    }

    .btn-generate {
        width: 100%;
        padding: 0.75rem;
        background: linear-gradient(135deg, #10b981, #059669);
        border: none;
        border-radius: 10px;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        margin-top: 1rem;
    }

    .btn-generate:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.35);
    }

    /* Label Previews */
    .label-preview {
        background: white;
        color: #1e293b;
        border-radius: 8px;
        padding: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    /* Folder Label */
    .folder-label {
        width: 280px;
        margin: 0 auto;
    }

    .folder-label .label-header {
        font-size: 0.625rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #64748b;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .folder-label .label-name {
        font-size: 1.25rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 0.5rem;
    }

    .folder-label .label-info {
        display: flex;
        justify-content: space-between;
        font-size: 0.75rem;
        color: #475569;
        margin-bottom: 0.75rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px dashed #e2e8f0;
    }

    .folder-label .label-envelopes {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.375rem;
    }

    .folder-label .env-tag {
        font-size: 0.6875rem;
        padding: 0.25rem 0.5rem;
        background: #f1f5f9;
        border-radius: 4px;
        text-align: center;
    }

    /* Envelope Label */
    .envelope-label {
        width: 180px;
        margin: 0 auto;
        text-align: center;
    }

    .envelope-label .label-category {
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .envelope-label .label-name-small {
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .envelope-label .label-registration-small {
        font-size: 0.75rem;
        color: #64748b;
    }

    /* Box Label */
    .box-label {
        width: 240px;
        margin: 0 auto;
        text-align: center;
    }

    .box-label .box-title {
        font-size: 0.75rem;
        color: #64748b;
        margin-bottom: 0.25rem;
    }

    .box-label .box-number {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .box-label .box-info {
        font-size: 0.8125rem;
        color: #475569;
        margin-bottom: 0.75rem;
    }

    .box-label .box-info div {
        margin-bottom: 0.25rem;
    }

    .box-label .box-count {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        background: #f1f5f9;
        border-radius: 4px;
        display: inline-block;
    }

    /* Print styles */
    .print-area {
        display: none;
    }

    @media print {
        body * {
            visibility: hidden;
        }

        .print-area,
        .print-area * {
            visibility: visible;
        }

        .print-area {
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
        }

        .print-area .label-preview {
            margin: 20mm auto;
            box-shadow: none;
            border: 1px solid #e2e8f0;
        }
    }
</style>

<script>
    import { invoke } from '@tauri-apps/api/core';

    interface Employee {
        id: number;
        full_name: string;
        registration: string;
    }

    interface ArchiveBox {
        id: number;
        box_number: string;
        year: number;
        period: string | null;
        letter_range: string | null;
        current_count: number;
    }

    // Tab switching
    document.querySelectorAll('.tab').forEach(tab => {
        tab.addEventListener('click', (e) => {
            const target = (e.target as HTMLElement).dataset.tab;
            
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            (e.target as HTMLElement).classList.add('active');
            
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.getElementById(`tab-${target}`)?.classList.add('active');
        });
    });

    // Employee search (debounced)
    let searchTimeout: ReturnType<typeof setTimeout>;

    async function searchEmployees(query: string, targetSelect: HTMLSelectElement) {
        if (query.length < 2) {
            targetSelect.innerHTML = '<option value="" disabled>Digite ao menos 2 caracteres...</option>';
            return;
        }

        const token = sessionStorage.getItem('archive_token');
        if (!token) return;

        try {
            const result = await invoke('search_employees', {
                payload: { token, query, limit: 20 },
            }) as { success: boolean; data?: Employee[] };

            if (result.success && result.data) {
                if (result.data.length === 0) {
                    targetSelect.innerHTML = '<option value="" disabled>Nenhum funcion√°rio encontrado</option>';
                } else {
                    targetSelect.innerHTML = result.data.map(emp => 
                        `<option value="${emp.id}" data-name="${emp.full_name}" data-reg="${emp.registration}">${emp.full_name} (${emp.registration})</option>`
                    ).join('');
                }
            }
        } catch (err) {
            console.error('Search failed:', err);
        }
    }

    // Folder employee search
    document.getElementById('folder-employee-search')?.addEventListener('input', (e) => {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            const query = (e.target as HTMLInputElement).value;
            searchEmployees(query, document.getElementById('folder-employee') as HTMLSelectElement);
        }, 300);
    });

    // Envelope employee search
    document.getElementById('env-employee-search')?.addEventListener('input', (e) => {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            const query = (e.target as HTMLInputElement).value;
            searchEmployees(query, document.getElementById('env-employee') as HTMLSelectElement);
        }, 300);
    });

    // Update folder preview on selection
    document.getElementById('folder-employee')?.addEventListener('change', (e) => {
        const select = e.target as HTMLSelectElement;
        const option = select.selectedOptions[0];
        if (option) {
            const name = option.dataset.name || '';
            const reg = option.dataset.reg || '';
            
            const preview = document.getElementById('preview-folder')!;
            preview.querySelector('.label-name')!.textContent = name;
            preview.querySelector('.label-registration')!.textContent = `MAT: ${reg}`;
        }
    });

    // Update envelope preview on selection
    document.getElementById('env-employee')?.addEventListener('change', (e) => {
        const select = e.target as HTMLSelectElement;
        const option = select.selectedOptions[0];
        if (option) {
            const name = option.dataset.name || '';
            const reg = option.dataset.reg || '';
            
            const preview = document.getElementById('preview-envelope')!;
            preview.querySelector('.label-name-small')!.textContent = name;
            preview.querySelector('.label-registration-small')!.textContent = `MAT: ${reg}`;
        }
    });

    // Update envelope category preview
    document.getElementById('env-category')?.addEventListener('change', (e) => {
        const value = (e.target as HTMLSelectElement).value;
        const labels: Record<string, string> = {
            'PESSOAL': 'üë§ PESSOAL',
            'MEDICINA': '‚öïÔ∏è MEDICINA DO TRABALHO',
            'SEGURANCA': 'ü¶∫ SEGURAN√áA DO TRABALHO',
            'TREINAMENTO': 'üìö TREINAMENTO'
        };
        
        const preview = document.getElementById('preview-envelope')!;
        preview.querySelector('.label-category')!.textContent = labels[value] || value;
    });

    // Load archive boxes
    async function loadArchiveBoxes() {
        const token = sessionStorage.getItem('archive_token');
        if (!token) return;

        try {
            const result = await invoke('list_archive_boxes', { payload: { token } }) as { success: boolean; data?: ArchiveBox[] };
            if (result.success && result.data) {
                const select = document.getElementById('box-select') as HTMLSelectElement;
                select.innerHTML = '<option value="">Selecione uma caixa...</option>' +
                    result.data.map(box => 
                        `<option value="${box.id}" data-number="${box.box_number}" data-year="${box.year}" data-period="${box.period || ''}" data-range="${box.letter_range || ''}" data-count="${box.current_count}">
                            ${box.box_number} (${box.year}) - ${box.current_count} pastas
                        </option>`
                    ).join('');
            }
        } catch (err) {
            console.error('Failed to load boxes:', err);
        }
    }

    // Update box preview
    document.getElementById('box-select')?.addEventListener('change', (e) => {
        const select = e.target as HTMLSelectElement;
        const option = select.selectedOptions[0];
        if (option && option.value) {
            const preview = document.getElementById('preview-box')!;
            preview.querySelector('.box-number')!.textContent = `CAIXA ${option.dataset.number || ''}`;
            
            const info = preview.querySelector('.box-info')!;
            info.innerHTML = `
                <div>Ano: ${option.dataset.year || ''}</div>
                ${option.dataset.period ? `<div>Per√≠odo: ${option.dataset.period}</div>` : ''}
                ${option.dataset.range ? `<div>Faixa: ${option.dataset.range}</div>` : ''}
            `;
            
            preview.querySelector('.box-count')!.textContent = `Qtd: ${option.dataset.count || 0} pastas`;
        }
    });

    // Print functions
    function printLabel(previewId: string) {
        const preview = document.getElementById(previewId);
        if (!preview) return;

        const printArea = document.getElementById('print-area')!;
        printArea.innerHTML = preview.outerHTML;
        window.print();
    }

    document.getElementById('btn-generate-folder')?.addEventListener('click', () => {
        printLabel('preview-folder');
    });

    document.getElementById('btn-generate-envelope')?.addEventListener('click', () => {
        printLabel('preview-envelope');
    });

    document.getElementById('btn-generate-box')?.addEventListener('click', () => {
        printLabel('preview-box');
    });

    // Init
    document.addEventListener('DOMContentLoaded', () => {
        loadArchiveBoxes();
    });
</script>
