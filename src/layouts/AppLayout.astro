---
import '../styles/global.css';
import Sidebar from '../components/app/Sidebar.astro';

interface Props {
    title?: string;
    currentPath?: string;
}

const { title = 'Arquivo Inteligente', currentPath = '/home' } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="app-body">
        <!-- Check auth immediately -->
        <script is:inline>
            (function() {
                var token = sessionStorage.getItem('archive_token');
                if (!token) {
                    window.location.replace('/');
                }
            })();
        </script>
        
        <div class="app-shell">
            <Sidebar currentPath={currentPath} />
            <main class="main-content">
                <slot />
            </main>
        </div>
        
        <div id="app-toast" role="status" aria-live="polite"></div>
    </body>
</html>

<style is:global>
    .app-body {
        min-height: 100vh;
    }

    .app-shell {
        display: flex;
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
        margin-left: 260px;
        padding: 2rem;
        min-height: 100vh;
    }

    @media (max-width: 768px) {
        .main-content {
            margin-left: 0;
        }
    }

    #app-toast {
        position: fixed;
        bottom: 20px;
        right: 24px;
        background: rgba(15, 23, 42, 0.95);
        padding: 0.8rem 1.2rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        transform: translateY(120%);
        opacity: 0;
        transition: transform 0.3s ease, opacity 0.3s ease;
        z-index: 1000;
    }

    #app-toast.visible {
        transform: translateY(0);
        opacity: 1;
    }

    #app-toast[data-type='error'] {
        background: rgba(239, 68, 68, 0.9);
    }
</style>
